                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Employees" asp-action="Add">Add Employee</a>
                </li>*@
            </ul>

            @await RenderSectionAsync("search", false)

        </div>
    </div>
</nav>

<!--Render Body-->
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

